<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Inschrijvingen graduaat programmeren" Height="600" Width="470">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="210"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="295"/>

            <RowDefinition/>

        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Gegevens" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="10,11,0,0" Height="26" Grid.RowSpan="2" Width="64"/>
        <Label Grid.Column="1" Grid.Row="0" Content="Student" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="10,11,0,0" Height="26" Grid.RowSpan="2" Width="54"/>
        <ComboBox x:Name="Student" Grid.Column="1" Grid.Row="0" Width="135" Height="Auto" HorizontalAlignment="Right" Margin="0,15,10,0" VerticalAlignment="Top" SelectionChanged="Student_SelectionChanged">
            <ComboBoxItem x:Name="ja" Content=""/>
        </ComboBox>


            <Label Grid.Column="0" Grid.Row="1" Content="Naam:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="26" Width="44"/>
        <TextBox x:Name="NameTextBox" Grid.Column="0" Grid.Row="1" Width="200" Height="20" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>

        <Label Grid.Column="0" Grid.Row="1" Content="Geboortedatum:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0" Height="26" Width="97"/>
        <DatePicker x:Name="Date" Grid.Column="0" Grid.Row="1" Width="200" Height="25" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top"/>

        <Label Grid.Column="0" Grid.Row="1" Content="Geslacht:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,140,0,0" Height="26" Width="58"/>
        <RadioButton x:Name="Male" Grid.Column="0" Grid.Row="1" Content="M" Margin="10,165,0,100" Grid.RowSpan="2"/>
        <RadioButton x:Name="Female" Grid.Column="0" Grid.Row="1" Content="V" Margin="60,165,0,100" Grid.RowSpan="2"/>
        <RadioButton x:Name="Other" Grid.Column="0" Grid.Row="1" Content="X" Margin="110,165,0,100" Grid.RowSpan="2"/>

        <Label Grid.Column="0" Grid.Row="1" Content="huidig diploma:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0" Height="26" Width="93"/>
        <CheckBox x:Name="Graduaat" Grid.Column="0" Grid.Row="1" Content="Secundair onderwijs ASO/TSO/BSO" Margin="10,235,0,100" Grid.RowSpan="2"/>
        <CheckBox x:Name="Bachelor" Grid.Column="0" Grid.Row="1" Content="Hoger onderwijs (bachelor/graduaat)" Margin="10,260,0,100" Grid.RowSpan="2"/>

        <Label Grid.Column="0" Grid.Row="2" Content="Olods" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="Auto" Margin="10,10,0,0"/>
        <Label Grid.Column="0" Grid.Row="2" Content="Studiepunten:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="Auto" Margin="100,10,0,0"/>
        <Label Grid.Column="0" Grid.Row="2"  x:Name="studiepuntenLabel" Content="0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="26" Width="Auto" Margin="100,10,10,0"/>
        <ListBox Grid.Column="0" x:Name="olodListBox" Grid.Row="2" Width="215" Height="150" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" SelectionMode="Multiple" SelectionChanged="olodListBox_SelectionChanged"/>

        <Button Grid.Column="0" Grid.Row="2" Content="Inschrijven" Width="75" Height="25" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Click="inschrijven" />
        <TextBlock x:Name="textblock" Grid.Column="1" Grid.Row="1" Background="LightGray" Width="150" Margin="0,30,10,0" HorizontalAlignment="Right"/>
        <Button Grid.Column="1" Content="Verwijderen" Grid.Row="2" Width="75" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0" Click="verwijderen"/>


















    </Grid>
</Window>
